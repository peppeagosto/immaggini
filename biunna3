<script>
// OROLOGIO DIGITALE REALE (rotondo)
function updateDigitalClock(){
  const now = new Date();
  const hours = String(now.getHours()).padStart(2, '0');
  const minutes = String(now.getMinutes()).padStart(2, '0');
  const seconds = String(now.getSeconds()).padStart(2, '0');
  document.getElementById('digital-clock-round').innerText = `${hours}:${minutes}:${seconds}`;
}
setInterval(updateDigitalClock, 1000);
updateDigitalClock();

// DATA COMPLETA
function updateDate(){
  const now = new Date();
  const day = now.getDate();
  const monthNames = ["Gennaio", "Febbraio", "Marzo", "Aprile", "Maggio", "Giugno", "Luglio", "Agosto", "Settembre", "Ottobre", "Novembre", "Dicembre"];
  const month = monthNames[now.getMonth()];
  const year = now.getFullYear();
  document.getElementById('date-text').innerText = `${day} ${month} ${year}`;
}
updateDate();
setInterval(updateDate, 86400000);

// STREAM
const STREAM_MP3="https://stream.zeno.fm/ylkruiq5e4fvv.aac";
const audioElem=document.getElementById("audio");
audioElem.src=STREAM_MP3;
audioElem.crossOrigin="anonymous";

const playBtn=document.getElementById("play");
const stopBtn=document.getElementById("stop");
const volElem=document.getElementById("vol");
let isOn=false;

// AUDIO CONTEXT
let audioCtx;

async function initAudioContext() {
  if (audioCtx) return;
  audioCtx = new (window.AudioContext || window.webkitAudioContext)();
  const source = audioCtx.createMediaElementSource(audioElem);
  source.connect(audioCtx.destination);
}

// PLAY / PAUSE / STOP
playBtn.onclick = async () => {
  try {
    await initAudioContext();
    if (audioCtx.state === "suspended") {
      await audioCtx.resume();
    }

    if (!isOn) {
      await audioElem.play();
      isOn = true;
      playBtn.textContent = "‚ùö‚ùö";
    } else {
      audioElem.pause();
      isOn = false;
      playBtn.textContent = "‚ñ∂";
    }
  } catch (e) {
    console.error("Errore audio:", e);
    alert("Clicca di nuovo Play ‚Äì il browser blocca l'audio automatico. üòÖ");
  }
};

stopBtn.onclick = () => {
  audioElem.pause();
  audioElem.currentTime = 0;
  isOn = false;
  playBtn.textContent = "‚ñ∂";
};

volElem.oninput = e => audioElem.volume = e.target.value;

// NOW PLAYING
async function nowPlaying(){
  try{
    const r=await fetch("https://zenoplay.zenomedia.com/api/zenofm/nowplaying/ylkruiq5e4fvv");
    const d=await r.json();
    document.getElementById("trackTitle").innerText=d.title||"";
  }catch(e){
    console.log("Errore metadata:", e);
  }
}
setInterval(nowPlaying,18000);
nowPlaying();
</script>
